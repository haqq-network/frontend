{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@haqq/governance/proposal-details": [
        "libs/governance/proposal-details/src/index.ts"
      ],
      "@haqq/governance/proposal-list": [
        "libs/governance/proposal-list/src/index.ts"
      ],
      "@haqq/hooks": ["libs/hooks/src/index.ts"],
      "@haqq/providers": ["libs/providers/src/index.ts"],
      "@haqq/sentry": ["libs/sentry/src/index.ts"],
      "@haqq/shared": ["libs/shared/src/index.ts"],
      "@haqq/theme": ["libs/theme/src/index.ts"],
      "@haqq/ui-kit": ["libs/ui-kit/src/index.ts"],
      "@haqq/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}

{
  "root": true,
  "ignorePatterns": ["**/*"],
  "extends": ["plugin:storybook/recommended"],
  "plugins": ["@nx", "import", "prettier"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "shell",
                "onlyDependOnLibsWithTags": [
                  "shell-lib-*",
                  "data-access-falconer",
                  "sentry"
                ]
              },
              {
                "sourceTag": "shell-lib-*",
                "onlyDependOnLibsWithTags": [
                  "shell-lib-*",
                  "data-access-falconer"
                ]
              },
              {
                "sourceTag": "islamic",
                "onlyDependOnLibsWithTags": [
                  "islamic-lib-*",
                  "data-access-falconer"
                ]
              },
              {
                "sourceTag": "islamic-lib-*",
                "onlyDependOnLibsWithTags": [
                  "islamic-lib-*",
                  "data-access-falconer"
                ]
              },
              {
                "sourceTag": "haqq",
                "onlyDependOnLibsWithTags": [
                  "haqq-lib-*",
                  "data-access-falconer"
                ]
              },
              {
                "sourceTag": "haqq-lib-*",
                "onlyDependOnLibsWithTags": [
                  "haqq-lib-*",
                  "data-access-falconer"
                ]
              },
              {
                "sourceTag": "vesting",
                "onlyDependOnLibsWithTags": ["shell-lib-*", "sentry"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {
        "curly": "error"
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {
        "curly": "error"
      }
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "env": {
        "jest": true
      },
      "rules": {}
    }
  ],
  "rules": {
    "storybook/no-uninstalled-addons": [
      "error",
      {
        "ignore": ["@nx/react/plugins/storybook"]
      }
    ],
    "arrow-body-style": ["error", "always"],
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          ["parent", "sibling", "index"]
        ],
        "pathGroups": [
          {
            "pattern": "react",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "@haqq/**",
            "group": "internal"
          }
        ],
        "pathGroupsExcludedImportTypes": ["builtin"],
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        },
        "newlines-between": "never"
      }
    ],
    "prettier/prettier": "error"
  }
}
